@model IEnumerable<Article>

@section Section1
{
    <div> Here is an example for Section1 :) </div>
}

<h2>Articles</h2>
<a asp-action="Create">Create New Article</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Expiry Date</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Name</td>
                <td>@article.Price</td>
                <td>@article.ExpiryDate.ToShortDateString()</td>
                <td>@article.Category</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@article.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@article.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
