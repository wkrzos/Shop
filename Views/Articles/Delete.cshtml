@model Article
@{
    ViewData["Title"] = "Delete Article";
}

<h2>Delete Article</h2>

<div>
    <h3>Are you sure you want to delete this article?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>
            <dt class="col-sm-2">Expiry Date</dt>
            <dd class="col-sm-10">@Model.ExpiryDate.ToShortDateString()</dd>
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.Category</dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
